            ul
            form#msg
                input(placeholder="message", required, type="text")
                button Send
        div#nav
            button#callNickChangeBtn.hidden Change#[br]Nickname
            form#name2.hidden
                input(placeholder="nickname2", required, type="text" maxlength="10")
                button#nickChangeBtn Save
                
            
